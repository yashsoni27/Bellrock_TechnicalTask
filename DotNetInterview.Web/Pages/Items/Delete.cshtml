@page "{id}"
@model DotNetInterview.Web.Pages.Items.DeleteModel
@{
    ViewData["Title"] = "Delete Item";
}

<div class="container mt-4">
    <h1>Delete Item</h1>
    
    <div class="alert alert-danger mt-4">
        Are you sure you want to delete this item?
    </div>

    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Item Details</h5>
            <dl class="row">
                <dt class="col-sm-3">Reference:</dt>
                <dd class="col-sm-9">@Model.Item.Reference</dd>

                <dt class="col-sm-3">Name:</dt>
                <dd class="col-sm-9">@Model.Item.Name</dd>

                <dt class="col-sm-3">Price:</dt>
                <dd class="col-sm-9">Â£@Model.Item.Price.ToString("F2")</dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">@Model.Item.Status</dd>
            </dl>
        </div>
    </div>

    <form method="post" class="mt-4">
        <input type="hidden" asp-for="Item.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a href="/Index" class="btn btn-outline-secondary ms-2">Cancel</a>
    </form>
</div> 