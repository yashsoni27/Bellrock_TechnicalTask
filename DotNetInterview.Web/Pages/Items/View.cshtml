@page "{id}"
@model DotNetInterview.Web.Pages.Items.ViewModel
@{
    ViewData["Title"] = "View Item";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>View Item</h1>
        <a href="/Items/Edit/@Model.Item.Id" class="btn btn-outline-dark">Edit</a>
    </div>

    <div class="mb-4">
        <div class="row mb-2">
            <div class="col-2">ID:</div>
            <div class="col">@Model.Item.Id</div>
        </div>
        <div class="row mb-2">
            <div class="col-2">Reference:</div>
            <div class="col">@Model.Item.Reference</div>
        </div>
        <div class="row mb-2">
            <div class="col-2">Name:</div>
            <div class="col">@Model.Item.Name</div>
        </div>
        <div class="row mb-2">
            <div class="col-2">Price:</div>
            <div class="col">Â£@Model.Item.Price.ToString("F2")</div>
        </div>
    </div>

    <h2>Variations:</h2>
    <div class="mt-3">
        @foreach (var variation in Model.Item.Variations)
        {
            <div class="row mb-2">
                <div class="col-1">Size:</div>
                <div class="col-1">@variation.Size</div>
                <div class="col-2"></div>
                <div class="col-1">Quantity:</div>
                <div class="col-1">@variation.Quantity</div>
            </div>
        }
    </div>
</div>

<style>
    .btn-outline-dark {
        border: 2px solid #000;
        font-weight: bold;
        padding: 8px 16px;
    }
</style> 